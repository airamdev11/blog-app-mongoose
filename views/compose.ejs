<%- include("./partials/header") -%>

    <h1>New</h1>
    <form method="post" action="/new">
        <div class="form-group">
          <label for="newTitle">Title</label>
          <input type="text" class="form-control" id="newTitle" name="newTitle" placeholder="Write the post title">
        </div>
        <div class="form-group">
            <label for="newDescription">Post</label>
            <textarea class="form-control" id="newDescription" rows="3"  name="newDescription" placeholder="Write your post"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Publish</button>
      </form>

<%- include("./partials/footer") -%>